<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Orphanage Dashboard</title>
  <style>
    /* Reset */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #f8faff, #f3f6fd);
      color: #333;
      display: flex;
      overflow-x: hidden;
    }

    /* Sidebar */
    .sidebar {
      width: 260px;
      background: linear-gradient(180deg, #4facfe, #00f2fe);
      color: white;
      height: 100vh;
      padding: 30px 20px;
      position: fixed;
      top: 0;
      left: 0;
      transition: transform 0.3s ease;
      z-index: 1000;
      box-shadow: 3px 0 20px rgba(0, 0, 0, 0.2);
    }

    .sidebar h2 {
      text-align: center;
      margin-bottom: 40px;
      font-size: 22px;
      font-weight: 700;
      letter-spacing: 1px;
      animation: fadeSlide 1s ease forwards;
    }

    .sidebar nav a {
      display: block;
      color: white;
      text-decoration: none;
      padding: 12px 18px;
      margin: 8px 0;
      border-radius: 10px;
      font-weight: 500;
      transition: all 0.3s ease;
      position: relative;
    }

    .sidebar nav a::before {
      content: "";
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 0;
      background: rgba(255, 255, 255, 0.3);
      transition: width 0.3s ease;
      border-radius: 10px;
    }

    .sidebar nav a:hover::before,
    .sidebar nav a.active::before {
      width: 100%;
    }

    .sidebar nav a span {
      position: relative;
      z-index: 2;
    }

    /* Main Content */
    .main-content {
      margin-left: 260px;
      padding: 25px;
      width: 100%;
      transition: margin-left 0.3s ease;
      animation: fadeIn 0.8s ease;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 25px;
      animation: fadeSlide 1s ease forwards;
    }

    header h1 {
      font-size: 24px;
      font-weight: 600;
      color: #2c3e50;
    }

    #menu-toggle {
      display: none;
      font-size: 26px;
      background: none;
      border: none;
      cursor: pointer;
      color: #2c3e50;
    }

    /* Sections */
    section {
      display: none;
      animation: fadeIn 0.6s ease forwards;
    }

    section.active {
      display: block;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeSlide {
      from {
        opacity: 0;
        transform: translateX(-30px);
      }

      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    /* Stats Cards */
    .stats {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 20px;
      margin: 20px 0;
    }

    .card {
      background: white;
      padding: 25px;
      border-radius: 15px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
      text-align: center;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      background: linear-gradient(145deg, #ffffff, #f0f4ff);
      animation: fadeSlide 1s ease;
    }

    .card:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
    }

    .card h3 {
      margin-bottom: 8px;
      font-size: 18px;
      font-weight: 500;
      color: #0072ff;
    }

    .card p {
      font-size: 22px;
      font-weight: 700;
      color: #2c3e50;
    }

    /* Tables */
    .table-section {
      background: white;
      padding: 25px;
      border-radius: 15px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
      margin-top: 20px;
      animation: fadeSlide 1s ease;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 15px;
    }

    table th,
    table td {
      padding: 14px;
      text-align: left;
      border-bottom: 1px solid #eee;
    }

    table th {
      background: #f3f6fd;
      font-weight: 600;
      color: #555;
    }

    table tr:hover {
      background: #f9fbff;
      transition: background 0.3s ease;
    }

    /* Forms */
    .form-container {
      background: white;
      padding: 25px;
      border-radius: 15px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
      max-width: 650px;
      animation: fadeSlide 1s ease;
    }

    .form-container h2 {
      margin-bottom: 15px;
      font-size: 20px;
      font-weight: 600;
      color: #0072ff;
    }

    .form-container label {
      display: block;
      margin: 10px 0 5px;
      font-weight: 500;
    }

    .form-container input,
    .form-container textarea {
      width: 100%;
      padding: 12px;
      border: 1px solid #ddd;
      border-radius: 8px;
      font-size: 15px;
      transition: 0.3s;
    }

    .form-container input:focus,
    .form-container textarea:focus {
      border-color: #0072ff;
      box-shadow: 0 0 8px rgba(0, 114, 255, 0.2);
      outline: none;
    }

    .form-container button {
      margin-top: 20px;
      padding: 12px 20px;
      background: linear-gradient(90deg, #4facfe, #00f2fe);
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 15px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .form-container button:hover {
      opacity: 0.9;
      transform: translateY(-2px);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-100%);
        position: absolute;
      }

      .sidebar.active {
        transform: translateX(0);
      }

      .main-content {
        margin-left: 0;
      }

      #menu-toggle {
        display: block;
      }
    }
  </style>
</head>

<body>
  <!-- Sidebar -->
  <aside class="sidebar">
    <h2>Adopt-a-Need</h2>
    <nav>
      <a href="#" class="nav-link active" data-page="dashboard"><span>Dashboard</span></a>
      <a href="#" class="nav-link" data-page="children"><span>Children</span></a>
      <a href="#" class="nav-link" data-page="donations"><span>Donations</span></a>
      <a href="#" class="nav-link" data-page="events"><span>Events</span></a>
      <a href="#" class="nav-link" data-page="volunteers"><span>Volunteers</span></a>
      <a href="#" class="nav-link" data-page="settings"><span>Settings</span></a>
    </nav>
  </aside>

  <!-- Main -->
  <main class="main-content">
    <header>
      <button id="menu-toggle">☰</button>
      <h1 id="page-title">Dashboard</h1>
    </header>

    <!-- Dashboard -->
    <section id="dashboard" class="active">
      <div class="stats">
        <div class="card">
          <h3>Children</h3>
          <p>120</p>
        </div>
        <div class="card">
          <h3>Donations</h3>
          <p>₹ 18,50,000</p>
        </div>
        <div class="card">
          <h3>Events</h3>
          <p>3 Upcoming</p>
        </div>
        <div class="card">
          <h3>Volunteers</h3>
          <p>60</p>
        </div>
      </div>
      <div class="table-section">
        <h2>Recent Donations</h2>
        <table>
          <thead>
            <tr>
              <th>Donor</th>
              <th>Amount</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Donor 1</td>
              <td>₹ 25,000</td>
              <td>01-09-2025</td>
            </tr>
            <tr>
              <td>Donor 2</td>
              <td>₹ 15,000</td>
              <td>05-09-2025</td>
            </tr>
            <tr>
              <td>Donor 3</td>
              <td>₹ 10,000</td>
              <td>10-09-2025</td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>

    <!-- Children -->
    <section id="children">
      <div class="form-container">
        <h2>Add Child</h2>
        <label>Name:</label>
        <input type="text" placeholder="Child's name" />
        <label>Age:</label>
        <input type="number" placeholder="Age" />
        <label>Notes:</label>
        <textarea placeholder="Health, education, etc."></textarea>
        <button>Add Child</button>
      </div>
    </section>

    <!-- Donations -->
    <section id="donations">
      <div class="form-container">
        <h2>Record Donation</h2>
        <label>Donor Name:</label>
        <input type="text" placeholder="Donor's name" />
        <label>Amount (₹):</label>
        <input type="number" placeholder="Amount" />
        <label>Date:</label>
        <input type="date" />
        <button>Save Donation</button>
      </div>
    </section>

    <!-- Events -->
    <section id="events">
      <div class="form-container">
        <h2>Add Event</h2>
        <label>Event Title:</label>
        <input type="text" placeholder="Event name" />
        <label>Date:</label>
        <input type="date" />
        <label>Description:</label>
        <textarea placeholder="Event details"></textarea>
        <button>Add Event</button>
      </div>
    </section>

    <!-- Volunteers -->
    <section id="volunteers">
      <div class="form-container">
        <h2>Register Volunteer</h2>
        <label>Name:</label>
        <input type="text" placeholder="Full name" />
        <label>Mobile:</label>
        <input type="text" placeholder="Mobile number" />
        <label>Availability:</label>
        <textarea placeholder="Days and times available"></textarea>
        <button>Register</button>
      </div>
    </section>

    <!-- Settings -->
    <section id="settings">
      <div class="form-container">
        <h2>Settings</h2>
        <label>Orphanage Name:</label>
        <input type="text" placeholder="Orphanage name" />
        <label>Admin Email:</label>
        <input type="email" placeholder="Admin email" />
        <button>Save Settings</button>
      </div>
    </section>
  </main>

  <script>
    // Sidebar toggle
    document.getElementById("menu-toggle").addEventListener("click", () => {
      document.querySelector(".sidebar").classList.toggle("active");
    });

    // Navigation
    const navLinks = document.querySelectorAll(".nav-link");
    const sections = document.querySelectorAll("section");
    const pageTitle = document.getElementById("page-title");

    navLinks.forEach(link => {
      link.addEventListener("click", e => {
        e.preventDefault();
        navLinks.forEach(l => l.classList.remove("active"));
        sections.forEach(s => s.classList.remove("active"));
        link.classList.add("active");
        const pageId = link.getAttribute("data-page");
        document.getElementById(pageId).classList.add("active");
        pageTitle.textContent = link.textContent;
        document.querySelector(".sidebar").classList.remove("active");
      });
    });
  </script>
</body>

</html>